<odoo noupdate="1">

    <record id="request_category_data_hr_expense" model="request.category">
        <field name="name">Employee Expense</field>
        <field
            name="image"
            type="base64"
            file="hr_expense_request_flow/static/src/img/money-svgrepo-com.svg"
        />
        <field
            name="approved_action_id"
            ref="action_request_flow_approve_child_doc_ex"
        />
        <field name="refused_action_id" ref="action_request_flow_reject_child_doc_ex" />
        <field name="sequence">100</field>
        <field name="automated_sequence" eval="True" />
        <field name="sequence_code">RQEX</field>
        <field name="has_date">optional</field>
    </record>

    <record id="child_doc_option_hr_expense" model="request.category.child.doc.option">
        <field name="category_id" ref="request_category_data_hr_expense" />
        <field name="model">hr.expense.sheet</field>
        <field name="approved_action_id" eval="False" />
        <field name="rejected_action_id" eval="False" />
    </record>

</odoo>
