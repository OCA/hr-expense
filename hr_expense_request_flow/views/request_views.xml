<odoo>

    <record id="request_request_view_form" model="ir.ui.view">
        <field name="name">request.request.view.form</field>
        <field name="model">request.request</field>
        <field name="inherit_id" ref="request_flow.request_request_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='has_access_to_request']" position="after">
                <field name="use_ex" invisible="1" />
                <button
                    name="create_child_doc"
                    string="Create EX"
                    type="object"
                    attrs="{'invisible':['|','|',('use_ex','=',False),('state','!=','draft'),('hr_expense_count','=',0)]}"
                    context="{'action_id': 'hr_expense.action_hr_expense_sheet_my_all', 'use_av': False}"
                />
                <button
                    name="create_child_doc"
                    string="Create EX"
                    type="object"
                    class="btn-primary"
                    attrs="{'invisible':['|','|',('use_ex','=',False),('state','!=','draft'),('hr_expense_count','>',0)]}"
                    context="{'action_id': 'hr_expense.action_hr_expense_sheet_my_all', 'use_av': False}"
                />
            </xpath>
            <xpath expr="//button[@name='action_get_attachment_view']" position="after">
                <button
                    name="view_child_doc"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-dollar"
                    attrs="{'invisible':[('use_ex','=',False)]}"
                    context="{'action_id': 'hr_expense.action_hr_expense_sheet_my_all', 'use_av': False}"
                >
                    <field name="hr_expense_count" string="EX" widget="statinfo" />
                </button>
            </xpath>
        </field>
    </record>

    <record id="request_request_view_search" model="ir.ui.view">
        <field name="name">request.request.search</field>
        <field name="model">request.request</field>
        <field name="inherit_id" ref="request_flow.request_request_view_search" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="expense_sheet_ids" />
            </field>
        </field>
    </record>

</odoo>
