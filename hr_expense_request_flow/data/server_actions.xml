<odoo>

    <!-- Server actions for EX -->
    <record id="action_request_flow_approve_child_doc_ex" model="ir.actions.server">
        <field name="name">Request Flow: Approve EX</field>
        <field name="model_id" ref="request_flow.model_request_request" />
        <field name="state">code</field>
        <field name="code">
expense_sheets = record.expense_sheet_ids.filtered(lambda l: l.state=="submit")
expense_sheets.with_context(bypass_check_user_has_groups=True).approve_expense_sheets()
        </field>
    </record>

    <record id="action_request_flow_reject_child_doc_ex" model="ir.actions.server">
        <field name="name">Request Flow: Reuect EX</field>
        <field name="model_id" ref="request_flow.model_request_request" />
        <field name="state">code</field>
        <field name="code">
expense_sheets = record.expense_sheet_ids.filtered(lambda l: l.state=="submit")
expense_sheets.mapped("expense_line_ids").refuse_expense("Refused by ref request")
expense_sheets.refuse_sheet("Refused by ref request")
        </field>
    </record>

</odoo>
