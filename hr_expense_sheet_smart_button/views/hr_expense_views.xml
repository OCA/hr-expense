<odoo>
    <record id="hr_expense_sheet_view_inherit" model="ir.ui.view">
        <field name="model">hr.expense.sheet</field>
        <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form" />
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/div[hasclass('oe_button_box')]" position="inside">
                <button name="action_get_expense_view"
                    class="oe_stat_button"
                    icon="fa-file-text-o"
                    type="object"
                    attrs="{'invisible': [('expense_number', '=', 0)]}">
                    <field name="expense_number" widget="statinfo" string="Expenses"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
