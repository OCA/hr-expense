<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_hr_expense_sheet_form" model="ir.ui.view">
        <field name="name">hr.expense.sheet.form</field>
        <field name="model">hr.expense.sheet</field>
        <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='expenses']" position="after">
                <page
                    name="advance"
                    string="Advance Details"
                    attrs="{'invisible': [('advance', '=', False), '|', ('advance_sheet_id', '=', False),('advance_line', '=', [])]}"
                >
                    <field name="advance_line">
                        <tree editable="bottom">
                            <field name="av_line_id" invisible="1" />
                            <field name="name" />
                            <field name="unit_amount" sum="Total" />
                            <field name="currency_id" invisible="1" />
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
