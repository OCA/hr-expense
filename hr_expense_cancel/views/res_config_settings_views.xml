<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hr.expense</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_expense.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='expenses_setting_container']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="expense_policy_settings">
                    <div class="o_setting_left_pane" />
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Expense Cancellation Policy</span>
                        <div class="text-muted">
                            Set the cancellation policy to standard by default.
                            Standard odoo will change state expense to 'Refused',
                            However, you can configure the policy to change the state
                            based on your needs.
                        </div>
                        <div class="content-group">
                            <div class="row mt16">
                                <label
                                    string="Cancel expense, Expense change state to"
                                    for="ex_cancel_policy"
                                    class="oe_inline col-lg-9"
                                />
                                <field
                                    name="ex_cancel_policy"
                                    class="oe_inline col-lg-3"
                                />
                            </div>
                            <div class="row">
                                <label
                                    string="Cancel JE, Expense change state to"
                                    for="je_cancel_policy"
                                    class="oe_inline col-lg-9"
                                />
                                <field
                                    name="je_cancel_policy"
                                    class="oe_inline col-lg-3"
                                />
                            </div>
                            <div class="row">
                                <label
                                    string="Cancel payment, Expense change state to"
                                    for="payment_cancel_policy"
                                    class="oe_inline col-lg-9"
                                />
                                <field
                                    name="payment_cancel_policy"
                                    class="oe_inline col-lg-3"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
