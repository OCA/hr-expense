<odoo noupdate="1">

    <!-- AV -->
    <record id="request_category_data_hr_advance" model="request.category">
        <field name="name">Employee Advance</field>
        <field
            name="image"
            type="base64"
            file="hr_expense_advance_clearing_request_flow/static/src/img/coin-cash-svgrepo-com.svg"
        />
        <field
            name="approved_action_id"
            ref="action_request_flow_approve_child_doc_av"
        />
        <field name="refused_action_id" ref="action_request_flow_reject_child_doc_av" />
        <field name="sequence">200</field>
        <field name="automated_sequence" eval="True" />
        <field name="sequence_code">RQAV</field>
        <field name="has_amount">required</field>
        <field name="has_date">optional</field>
    </record>

    <record id="child_doc_option_hr_advance" model="request.category.child.doc.option">
        <field name="category_id" ref="request_category_data_hr_advance" />
        <field name="model">hr.advance.sheet</field>
        <field name="approved_action_id" eval="False" />
        <field name="rejected_action_id" eval="False" />
    </record>

    <!-- Clear AV -->
    <record id="request_category_data_hr_clearing" model="request.category">
        <field name="name">Clear Advance</field>
        <field
            name="image"
            type="base64"
            file="hr_expense_advance_clearing_request_flow/static/src/img/exchange-coin-svgrepo-com.svg"
        />
        <field
            name="approved_action_id"
            ref="hr_expense_request_flow.action_request_flow_approve_child_doc_ex"
        />
        <field
            name="refused_action_id"
            ref="hr_expense_request_flow.action_request_flow_reject_child_doc_ex"
        />
        <field name="sequence">300</field>
        <field name="automated_sequence" eval="True" />
        <field name="sequence_code">RQCA</field>
        <field name="has_date">optional</field>
        <field name="has_av">required</field>
    </record>

    <record id="child_doc_option_hr_clearing" model="request.category.child.doc.option">
        <field name="category_id" ref="request_category_data_hr_clearing" />
        <field name="model">hr.expense.sheet</field>
        <field name="approved_action_id" eval="False" />
        <field name="rejected_action_id" eval="False" />
    </record>

</odoo>
