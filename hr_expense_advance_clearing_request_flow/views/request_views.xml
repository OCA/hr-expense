<odoo>

    <record id="request_request_view_form" model="ir.ui.view">
        <field name="name">request.request.view.form</field>
        <field name="model">request.request</field>
        <field name="inherit_id" ref="request_flow.request_request_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='has_access_to_request']" position="after">
                <field name="use_av" invisible="1" />
                <button
                    name="create_child_doc"
                    string="Create AV"
                    type="object"
                    attrs="{'invisible':['|','|',('use_av','=',False),('state','!=','draft'),('hr_advance_count','=',0)]}"
                    context="{'action_id': 'hr_expense.action_hr_expense_sheet_my_all', 'use_av': True}"
                />
                <button
                    name="create_child_doc"
                    string="Create AV"
                    type="object"
                    class="btn-primary"
                    attrs="{'invisible':['|','|',('use_av','=',False),('state','!=','draft'),('hr_advance_count','>',0)]}"
                    context="{'action_id': 'hr_expense.action_hr_expense_sheet_my_all', 'use_av': True}"
                />
            </xpath>
            <xpath expr="//button[@name='action_get_attachment_view']" position="after">
                <button
                    name="view_child_doc"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-dollar"
                    attrs="{'invisible':[('use_av','=',False)]}"
                    context="{'action_id': 'hr_expense.action_hr_expense_sheet_my_all', 'use_av': True}"
                >
                    <field name="hr_advance_count" string="AV" widget="statinfo" />
                </button>
            </xpath>

            <field name="partner_id" position="after">
                <!-- Clear AV -->
                <field name="has_av" invisible="1" />
                <field
                    name="advance_sheet_id"
                    attrs="{'invisible':[('has_av','==','no')], 'required': [('has_av','==','required')], 'readonly': [('state','!=','draft')]}"
                />
            </field>
        </field>
    </record>

    <record id="request_request_view_search" model="ir.ui.view">
        <field name="name">request.request.search</field>
        <field name="model">request.request</field>
        <field name="inherit_id" ref="request_flow.request_request_view_search" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="advance_sheet_ids" />
            </field>
        </field>
    </record>

</odoo>
