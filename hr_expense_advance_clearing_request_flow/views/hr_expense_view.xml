<odoo>
    <record id="view_hr_expense_sheet_form" model="ir.ui.view">
        <field name="name">hr.expense.sheet.form.inherit</field>
        <field name="model">hr.expense.sheet</field>
        <field
            name="inherit_id"
            ref="hr_expense_advance_clearing.view_hr_expense_sheet_form"
        />
        <field name="arch" type="xml">
            <field name="advance_sheet_id" position="attributes">
                <attribute
                    name="invisible"
                >'has_av' in context and not context.get('has_av')</attribute>
            </field>
        </field>
    </record>
</odoo>
