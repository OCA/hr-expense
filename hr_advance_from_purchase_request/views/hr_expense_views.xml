<odoo>
    <record id="view_hr_expense_sheet_form" model="ir.ui.view">
        <field name="name">hr.expense.sheet.form.inherit</field>
        <field name="model">hr.expense.sheet</field>
        <field
            name="inherit_id"
            ref="hr_expense_from_purchase_request.view_hr_expense_sheet_form"
        />
        <field name="arch" type="xml">
            <field name="purchase_request_id" position="after">
                <field
                    name="pr_for"
                    widget="radio"
                    attrs="{'invisible': [('purchase_request_id', '=', False)],
                            'readonly': [('expense_line_ids', '!=', [])]}"
                />
            </field>
            <field name="purchase_request_id" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': [('advance_sheet_id', '!=', False)]}</attribute>
            </field>
        </field>
    </record>
</odoo>
