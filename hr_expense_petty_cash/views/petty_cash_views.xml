<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_move_tree" model="ir.ui.view">
        <field name="name">account.move.petty.cash.tree</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <tree
                editable="bottom"
                decoration-info="state == 'draft'"
                decoration-muted="state == 'cancel'"
                default_order="date desc, name desc"
            >
                <field name="name" />
                <field name="invoice_date" optional="show" string="Bill Date" />
                <field name="invoice_payment_ref" optional="hide" />
                <field name="ref" optional="hide" />
                <field
                    name="company_id"
                    groups="base.group_multi_company"
                    options="{'no_create': True}"
                    optional="show"
                />
                <field name="invoice_date_due" optional="hide" />
                <field name="amount_total" string="Total" sum="Total" optional="show" />
                <field name="state" optional="show" />
                <field name="invoice_payment_state" optional="show" />
            </tree>
        </field>
    </record>
    <record id="view_petty_cash_form" model="ir.ui.view">
        <field name="name">petty.cash.form</field>
        <field name="model">petty.cash</field>
        <field name="arch" type="xml">
            <form string="Petty Cash">
                <sheet>
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <group>
                        <field name="active" invisible="1" />
                        <group name="data">
                            <field name="partner_id" />
                            <field name="account_id" />
                            <field name="journal_id" />
                        </group>
                        <group name="petty_cash">
                            <field name="petty_cash_limit" />
                            <field name="petty_cash_balance" />
                        </group>
                    </group>
                    <notebook>
                        <page name="bills" string="Bills">
                            <field
                                name="bill_ids"
                                context="{'tree_view_ref':'hr_expense_petty_cash.view_move_tree'}"
                            />
                        </page>
                        <page name="expenses" string="Expenses">
                            <field
                                name="expense_ids"
                                context="{'form_view_ref' : 'hr_expense.hr_expense_view_form_without_header'}"
                            />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_petty_cash_list" model="ir.ui.view">
        <field name="name">petty.cash.list</field>
        <field name="model">petty.cash</field>
        <field name="arch" type="xml">
            <tree string="Petty Cash">
                <field name="partner_id" />
                <field name="account_id" />
                <field name="journal_id" />
                <field name="petty_cash_limit" sum="Limit" />
                <field name="petty_cash_balance" sum="Balance" />
            </tree>
        </field>
    </record>
    <record id="view_petty_cash_kanban" model="ir.ui.view">
        <field name="name">petty.cash.kanban</field>
        <field name="model">petty.cash</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="partner_id" />
                <field name="petty_cash_balance" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="row">
                                <div class="col-6">
                                    <strong>
                                        <field name="partner_id" />
                                    </strong>
                                </div>
                                <div class="col-6 text-right">
                                    <field name="petty_cash_balance" />
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="view_petty_cash_search" model="ir.ui.view">
        <field name="name">petty.cash.search</field>
        <field name="model">petty.cash</field>
        <field name="arch" type="xml">
            <search string="Petty Cash">
                <field name="partner_id" />
                <filter
                    string="Archived"
                    name="inactive"
                    domain="[('active','=',False)]"
                />
                <filter
                    string="Journal"
                    name="journal"
                    domain="[('journal_id','!=',False)]"
                />
                <group expand="0" string="Group By">
                    <filter
                        name="partner"
                        string="Petty Cash Holder"
                        context="{'group_by':'partner_id'}"
                    />
                    <filter
                        name="account"
                        string="Petty Cash Account"
                        context="{'group_by' : 'account_id'}"
                    />
                    <filter
                        name="journal"
                        string="Journal"
                        context="{'group_by' : 'journal_id'}"
                    />
                </group>
            </search>
        </field>
    </record>
    <record id="action_petty_cash" model="ir.actions.act_window">
        <field name="name">Petty Cash</field>
        <field name="res_model">petty.cash</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_petty_cash_search" />
        <field name="view_id" ref="view_petty_cash_list" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new petty cash holder
            </p>
        </field>
    </record>
    <menuitem
        id="menu_petty_cash"
        name="Petty Cash"
        action="action_petty_cash"
        parent="account.account_account_menu"
    />
</odoo>
