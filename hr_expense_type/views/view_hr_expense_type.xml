<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_hr_expense_type_tree" model="ir.ui.view">
        <field name="model">hr.expense.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="active" invisible="True" />
                <field name="name" />
                <field name="description" />
                <field name="company_id" groups="base.group_multi_company" />
            </tree>
        </field>
    </record>
    <record id="view_hr_expense_type_form" model="ir.ui.view">
        <field name="model">hr.expense.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <field name="active" invisible="1" />
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                            />
                        </group>
                        <group />
                    </group>
                    <group>
                        <field name="description" nolabel="1" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_hr_expense_type_view" model="ir.actions.act_window">
        <field name="name">Expense Types</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.expense.type</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="view_hr_expense_type_tree" />
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to set a new type for expense.
            </p>
        </field>
    </record>
    <menuitem
        id="menu_hr_expense_type"
        parent="hr_expense.menu_hr_expense_configuration"
        sequence="40"
        action="action_hr_expense_type_view"
    />
</odoo>
